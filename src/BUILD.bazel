py_library(
    name = "package_factory",
    srcs = ["package_factory.py"],
    deps = [
        ":version",
        ":module",
        ":package",
    ],
)

py_library(
    name = "version",
    srcs = ["version.py"],
    deps = [
        ":module",
        "@pip//:packaging_pkg",
        ],
)

py_library(
    name = "modularize_package",
    srcs = ["modularize_package.py"],
    deps = [
        ":module",
        ":package",
        ":registry",
        ":writers",
        ":storage",
    ],
)

py_library(
    name = "module",
    srcs = ["module.py"],
)

py_library(
    name = "package",
    srcs = ["package.py"],
)

py_library(
    name = "registry",
    srcs = ["registry.py"],
    deps = [
        ":version",
        ":module",
        ":package",
        ":writers",
    ],
)

py_library(
    name = "writers",
    srcs = ["writers.py"],
)

exports_files(["main.py"])
