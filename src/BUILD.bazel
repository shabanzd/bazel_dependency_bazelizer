py_library(
    name = "read_input_files",
    srcs = ["read_input_files.py"],
    deps = [
        ":version",
        ":package",
    ],
)

py_library(
    name = "storage",
    srcs = ["storage.py"],
    deps = ["@pip//:boto3_pkg"],
)

py_library(
    name = "bazelize_deps",
    srcs = ["bazelize_deps.py"],
    deps = [
        ":package_factory",
        ":modularize_package",
        ":storage",
        ":module",
        ":package",
        ":registry",
    ],
